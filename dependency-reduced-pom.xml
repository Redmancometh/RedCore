<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.redmancometh</groupId>
  <artifactId>RedCore</artifactId>
  <version>2.0</version>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>lib</directory>
        <includes>
          <include>plugin.yml</include>
          <include>hibernate.cfg.xml</include>
        </includes>
      </resource>
    </resources>
    <directory>RedCore</directory>
    <finalName>RedCore</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>com.zaxxer:*</include>
                  <include>org.slf4j:*</include>
                  <include>log4j:*</include>
                  <include>org.hibernate:*</include>
                  <include>hibernate-annotations:*</include>
                  <include>org.apache.commons:commons-collections4:*</include>
                  <include>org.hibernate.common:*</include>
                  <include>dom4j:*</include>
                  <include>org.apache:*</include>
                  <include>org.javassist:*</include>
                  <include>javax.transaction:*</include>
                  <include>org.jboss.logging:*</include>
                  <includes>org.hibernate.javax.persistence:*</includes>
                  <includes>com.fasterxml:*</includes>
                  <include>javax.servlet:*</include>
                  <include>com.sparkjava:*</include>
                  <include>org.eclipse.jetty:*</include>
                  <include>org.projectlombok:*</include>
                  <include>com.google.code.gson:*</include>
                  <include>com.hazelcast:*</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <stripVersion>true</stripVersion>
          <outputDirectory>${user.home}/arkdev/plugins</outputDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>JBoss repository</id>
      <url>http://repository.jboss.org/nexus/content/groups/public/</url>
    </repository>
    <repository>
      <releases />
      <snapshots />
      <id>mvnrepository</id>
      <url>http://repo1.maven.org/maven2</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.2.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javassist</groupId>
      <artifactId>javassist</artifactId>
      <version>3.12.1.GA</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>me.iscoelho</groupId>
      <artifactId>lilypad</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/Bukkit-Connect.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.redmancometh</groupId>
      <artifactId>spigot</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/spigot.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>

